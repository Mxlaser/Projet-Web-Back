generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  fullName  String
  role      Role
  documents Document[]
  createdAt DateTime  @default(now())
}

model Document {
  id          String   @id @default(uuid())
  title       String
  description String
  fileUrl     String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
